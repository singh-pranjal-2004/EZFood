<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dish Data</title>
  <link rel="stylesheet" href="./css/loader.css">
  <link rel="preload" as="image" href="./assets/images/hero-slider-1.jpg">
  <link rel="preload" as="image" href="./assets/images/hero-slider-2.jpg">
  <link rel="preload" as="image" href="./assets/images/hero-slider-3.jpg">
  <style>
    body {
      background-image: url(assets/images/hero-slider-1.jpg);
      font-family: Arial, sans-serif;
      color: #fff;
      margin: 0;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 80vh;
    }

    .form-container {
      background-color: rgba(0, 0, 0, 0.5);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
      border: 2px solid white;
      min-width: 30vw;
      width: 300px;
    }

    .form-container input,
    .form-container textarea {
      display: block;
      width: 90%;
      margin-bottom: 10px;
      border: none;
      background-color: rgba(255, 255, 255, 0.1);
      padding: 10px;
      border-radius: 5px;
      color: #fff;
    }

    .form-container input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .form-container input[type="submit"]:hover {
      background-color: #45a049;
    }

    .table-container {
      max-width: 100%;
      overflow-x: auto;
    }

    table {
      width: 89vw;
      white-space: normal;
      margin-left: 5vw;
      border-collapse: collapse;
      margin-top: 20px;
      overflow: hidden;
      background-color: rgba(0, 0, 0, 0.75);
      backdrop-filter: blur(0.5px);
      border: 2px solid white;
      box-shadow: 0px 0px 60px rgba(255, 255, 255, 0.5);
      border-radius: 30px;
      border-radius: 10px;
    }

    th,
    td {
      border: 1px solid #fff;
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #555;
    }

    tr:nth-child(even) {
      background-color: #666;
    }

    tr:hover {
      background-color: #888;
    }

    hr {
      border: none;
      height: 1px;
      background-color: #fff;
      margin: 10px 0;
    }

    /* Responsive Styling */
    @media screen and (max-width: 768px) {
      .form-container {
        width: 80%;
        min-width: auto;
      }
      table {
        width: 100%;
        margin-left: 0;
        font-size: 12px;
      }
    }

    @media screen and (max-width: 500px) {
      .form-container {
        width: 90%;
      }
      table {
        font-size: 10px;
      }
    }
  </style>
</head>

<body>
  <div class="preload" data-preaload>
    <div class="circle"></div>
    <p class="text">EZ Food</p>
  </div>

  <h1 style="text-align: center;">Dish Data</h1>
  <div class="container">
    <div class="form-container">
      <h2 style="text-align: center;">Add New Dish</h2>
      <form action="/insert" method="POST">
        <label for="name">Dish Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
        <label for="photo">Photo:</label>
        <input type="text" id="photo" name="photo" required>
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>

  <br><br>
  <hr>
  <h2 style="text-align: center;">List of Dishes</h2>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Dish Name</th>
          <th>Description</th>
          <th>Address</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% dishes.forEach(dish=> { %>
        <tr>
          <td>
            <%= dish.name %>
          </td>
          <td>
            <%= dish.description %>
          </td>
          <td>
            <%= dish.address %>
          </td>
          <td>
            <%= dish.price %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="./assets/js/script.js"></script>
</body>

</html>
